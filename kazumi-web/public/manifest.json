  "start_url": "/",
  "display": "standalone",
  "display_override": ["standalone", "minimal-ui"],
  "background_color": "#F5F1E8",
  "theme_color": "#FF6B6B",
  "orientation": "any",
  "id": "/",
  "scope": "/",
  "icons": [
    {
      "src": "/icons/icon.svg",
      "sizes": "any",
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "categories": ["entertainment", "video"],
  "lang": "zh-CN",
  "dir": "ltr",
  "prefer_related_applications": false,
  "screenshots": [
    {
      "src": "/screenshots/home.png",
      "sizes": "1170x2532",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "首页 - 热门番剧"
    },
    {
      "src": "/screenshots/player.png",
      "sizes": "2532x1170",
      "type": "image/png",
      "form_factor": "wide",
      "label": "播放器 - 弹幕播放"
    }
  ],
  "shortcuts": [
    {
      "name": "搜索番剧",
      "short_name": "搜索",
